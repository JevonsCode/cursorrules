# Language
language.default = zh-CN

# Frontend
frontend.language.priority = TypeScript > JavaScript (ES6+)
frontend.framework.vue.version = latest
frontend.framework.react.version = latest
frontend.packageManager = pnpm@latest

# Backend
backend.runtime = Node.js@latest
backend.database = MongoDB@latest
backend.framework.priority = Node related frameworks

# Style
style.preprocessor = SCSS|SASS@latest
style.properties.restricted = gap, non-standard vendor prefixes

# Tooling
tool.dependencyManager = pnpm@latest
tool.builder.recommended = Vite@latest

# Comment Rules
comment.variables = /** variableName: 类型 - 描述 */
comment.methods = /** 方法说明 - 参数/返回值等 */
comment.logic = // 逻辑说明（位于逻辑上方）
